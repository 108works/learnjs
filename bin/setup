#!/usr/bin/env bash

abspath="$(cd "${0%/*}" 2>/dev/null; echo "$PWD"/"${0##*/}")"
bin_dir=`dirname $abspath`
root_dir=`dirname $bin_dir`

echo "Checking Ruby dependencies"

if [[ ! -x `which ruby` ]]; then
  echo "Can't find Ruby 2.0 or later. You can install Ruby via Homebrew or RVM."
  exit 1
fi

if [[ ! -x `which bundle` ]]; then
  gem install --user-install bundler
  # Installs to ~/.gem/ruby/<version>
  echo "Can't find bundler. Install bundler with 'gem install bundler'. If already installed, check your path"
  exit 1
fi

# If on OS X
# If you cant find /usr/local/bin/gcc, then 
# xcode-select --install

