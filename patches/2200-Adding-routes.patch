--- a/public/tests/app_spec.js
+++ b/public/tests/app_spec.js
@@ -3,4 +3,11 @@ describe('LearnJS', function() {
     learnjs.showView('#problem-1');
     expect($('.view-container .problem-view').length).toEqual(1);
